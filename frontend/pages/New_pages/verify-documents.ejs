<script>
  function setWithExpiry(value) {
      const now = new Date();
      const ttl = 1000 * 60 * 60 * 24 * 365;
      const item = {
          value: value,
          expiry: now.getTime() + ttl,
      }
      localStorage.setItem('verifyDocPreview', JSON.stringify(item))
      console.log(localStorage.getItem('verifyDocPreview'))
  }
  function getWithExpiry() {
      const itemStr = localStorage.getItem('verifyDocPreview')
      if (!itemStr) {
          return null
      }
      const item = JSON.parse(itemStr)
      const now = new Date()
      if (now.getTime() > item.expiry) {
          localStorage.removeItem('verifyDocPreview')
          return null
      }
      return item.value
  }

  $(document).ready(function () {
      const count = getWithExpiry();
      console.log(count)
      if (typeof (count) != 'number') {
          setWithExpiry(1);
          document.querySelector('#selectTypeOpt').value = 'bg-primary';
          document.querySelector('#selectPlacement').value = 'top-0 start-50 translate-middle-x';
          var toastCount = 2;
          $('#showToastPlacement').click();
      }
  })
</script>

